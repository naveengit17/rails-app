<% if @user.errors.any? %>
<ul>

    <% @user.errors.full_messages.each do |msg| %>
        <li> <%= msg %>
        </li>
    <% end %>
</ul>
<% end %>

<%= form_for @user do |f| %>
    <p>
        <%= f.label :title %>
        <%= f.text_field :title %>
    </p> 
    <p>
        <%= f.label :Description %>
        <%= f.text_field :description %>
    </p> 
    <p>
        <%= f.submit %>
    </p>

<% end %>

<%= link_to 'Back to user list' , users_path %>